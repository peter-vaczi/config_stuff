
#
# incoming mail
#

set mbox_type=maildir
set folder=$HOME/Mail
set spoolfile=$HOME/Mail/nsn/INBOX

# mailbox dir is generated by offlineimap
source ~/.mutt/mailboxes

#
# sending mail
#

# smtp
set use_from = yes
set envelope_from = "yes"
set from="peter.vaczi@nsn.com"
set realname="Peter Vaczi"
set copy                                  # Keep copies of outgoing mail...
set record="+Sent"                    # ... and it gets saved in +nsn/Sent.

set postponed="+Drafts"
my_hdr From: Peter Vaczi <peter.vaczi@nsn.com>
set sendmail="/usr/bin/msmtp -a nsn"

send-hook 'nsn/' "set mime_forward signature='-ptr-'"

#
# alias handling
#
set alias_file=~/.mutt/aliases
source ~/.mutt/aliases
#set query_command="abook --mutt-query '%s'"
set query_command="~/.mutt/getAddresses.py '%s'"
macro index,pager A "<pipe-message>abook --add-email-quiet<return>" "add the sender address to abook"

#
# general stuff
#

set delete=yes                            # Do not ask when purging deleted message
set include=yes                           # Include the message in replies.
set sort=threads                          # Threaded view
set sort_aux=date-received                # Sort threads by date received.
set charset=iso-8859-1
set nomark_old                            # Don't mark unread new msgs as old.
set nobeep                                # We don't need no beeping software.
set pager_context=3                       # Display 3 lines of context in pager.
set pager_stop                            # Don't skip msgs on next page.

set editor='emacs -nw'

#
# display mails
#

# headers to show
ignore *
unignore From:
unignore To: 
unignore Cc:
unignore Date: 
unignore Subject:
hdr_order From: To: Cc: Date: Subject:

auto_view text/html

source ~/.mutt/bindings
source ~/.mutt/colors
