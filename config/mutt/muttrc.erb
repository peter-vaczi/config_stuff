
#
# incoming mail
#

set mbox_type=maildir
set folder=$HOME/Mail
set spoolfile=$HOME/Mail/nsn/INBOX

# mailbox dir is generated by offlineimap
source ~/.mutt/mailboxes

#
# sending mail
#

# smtp
set use_from = yes
set envelope_from = "yes"
set from="<%= `pass show nsn/email`.strip %>"
set realname="Peter Vaczi"
set copy                                  # Keep copies of outgoing mail...
set record="+Sent"                    # ... and it gets saved in +nsn/Sent.

set postponed="+Drafts"
my_hdr From: Peter Vaczi <<%= `pass show nsn/email`.strip %>>
set sendmail="/usr/bin/msmtp -a nsn"

send-hook 'nsn/' "set mime_forward signature='-ptr-'"

#
# alias handling
# use the ldap directory only
#
set query_command="~/.mutt/ldap_query '%s'"

#
# general stuff
#

set delete=yes                            # Do not ask when purging deleted message
set include=yes                           # Include the message in replies.
set sort=threads                          # Threaded view
set sort_aux=date-received                # Sort threads by date received.
set charset=utf-8
set nomark_old                            # Don't mark unread new msgs as old.
set nobeep                                # We don't need no beeping software.
set pager_context=3                       # Display 3 lines of context in pager.
set pager_stop                            # Don't skip msgs on next page.
set rfc2047_parameters                    # for fucked up MS outlook attachments

set editor='emacs -nw'

#
# display mails
#

# headers to show
ignore *
unignore From:
unignore To: 
unignore Cc:
unignore Date: 
unignore Subject:
hdr_order From: To: Cc: Date: Subject:

auto_view text/html
alternative_order text/plain text/html

auto_view application/msword application/vnd.msword
auto_view application/excel application/msexcel application/vnd.ms-excel
auto_view application/x-excel application/x-msexcel
auto_view application/vnd.ms-powerpoint application/x-mspowerpoint application/ppt
auto_view application/vnd.openxmlformats-officedocument.wordprocessingml.document
auto_view application/vnd.openxmlformats-officedocument.presentationml.presentation
auto_view application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

source ~/.mutt/bindings
source ~/.mutt/colors
